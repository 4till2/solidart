@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  summary {
    &::marker,
    &::-webkit-details-marker {
      @apply hidden;
    }

    list-style: none;
  }
}

@layer components {
  .body-link {
    @apply text-blue hover:underline;
  }
}

<%= SolidusAdmin::Config.tailwind_stylesheets.map { File.read(_1) }.join("\n") %>
